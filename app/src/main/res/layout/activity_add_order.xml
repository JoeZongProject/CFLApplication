<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.joe.cflapplication.ui.view.order.AddOrderActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroudColor"
        >
        <include layout="@layout/layout_title_with_back"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.joe.cflapplication.ui.widget.NoScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:listSelector="@color/transparent"
                    bind:items="@{viewModel.itemFoodMenuViewModels}"
                    bind:itemView="@{viewModel.foodMenuItemView}"
                    bind:onGridViewItemClickCommand="@{viewModel.onItemSelectFoodMenuCommand}"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mainColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    />
                <com.joe.cflapplication.ui.widget.NoScrollListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"
                    android:listSelector="@color/transparent"
                    />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.finalPrice}"
                    android:textColor="@color/red"
                    android:textSize="26sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="优惠"
                android:gravity="center"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="18sp"
                bind:clickCommand="@{viewModel.onClickCouponBtnCommand}"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="确认下单"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/mainColor"
                android:textSize="18sp"
                bind:clickCommand="@{viewModel.onClickCreateOrderBtnCommand}"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
